class Solution {
public:
    int minPathSum(vector<vector<int>>& grid) {
        int a,b,m=grid.size(),n=grid[0].size();
        if(m==0&&n==0) return grid[0][0];
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(i==0&&j==0) continue;
                if(i-1>=0) a=grid[i-1][j];
                else a=INT_MAX;
                if(j-1>=0) b=grid[i][j-1];
                else b=INT_MAX;

                grid[i][j]+=min(a,b);

            }
        }
        return grid[m-1][n-1];
    }
};
