class Solution {
public:
    int minOperations(string s) {
        int ch0=0,ch1=0;
        for (int i=0;i<s.size();++i){
            if(i%2==0){
                if(s[i]=='1') ch1++;
                else ch0++;}
                
            else {
                if(s[i]=='1') ch0++;
                 else ch1++;}

        }
        return min(ch0,ch1);
    }
};
