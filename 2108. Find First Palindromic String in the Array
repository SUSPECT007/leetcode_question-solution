class Solution {
    bool ispal(const string& str){
        int n=str.size();
        for(int i=0,j=n-1;i+1<=j;++i,--j){
            if (str[i]==str[j]) continue;
            else return false;

        }
        return true;
    }
public:

    string firstPalindrome(vector<string>& words) {
        for(string str: words){
            if(ispal(str)) return str;
        }
        return "";
    }
};
