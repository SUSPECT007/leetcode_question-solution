class Solution {
    int op(string &s,int a,int b){
        char temp;
        while(a<b){
            temp=s[a];
            s[a]=s[b];
            s[b]=temp;
            ++a;--b;
        }
        return 1;
    }
public:
    string reverseWords(string s) {
        int b=0,n=s.size();
        for(int i=0;i<=n;++i){
            if(s[i]==' '|| s[i]=='\0'){
                op(s,b,i-1);
                b=i+1;
            }
        }
        return s;
    }
};
