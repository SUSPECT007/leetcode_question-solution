class Solution {
public:
    int firstMissingPositive(vector<int>& nums) {
        int n=nums.size(),val;
        for(int i=0;i<n;++i)
        if (nums[i]<=0 || nums[i]>n) nums[i]=n+1;
        for(int i=0;i<n;++i){
            val=abs(nums[i]);
            if(val>=1 && val<=n){
                int flag=val-1;
                if(nums[flag]>0) nums[flag]*=-1;
            }
        }
        for(int i=1;i<=n;++i){
            if(nums[i-1]>0) return i;


        }
        return n+1;

    }
};
