class Solution {
public:
    int minPatches(vector<int>& nums, int n) {
        int index=0;
        long long missing=1;
        int ans=0;
        while (missing<=n){
            if(index<nums.size()&&nums[index]<=missing){
                missing+=nums[index];
                ++index;
            }
            else{
                missing+=missing;
                ++ans;
            }    
        }
        return ans;
    }
};
